@model Products_Categories.Models.Product
<div style = 'width: 100%;'>
    <p style = 'display:inline'>Products | </p>
    <a href = '/categories'>Categories</a>
</div>
<div style = 'display: inline-block; width: 40%; padding: 20px; vertical-align: top'>
    <h1>New Product</h1>
    <form asp-action="CreateProduct" asp-controller="Home" method="post">
        <span asp-validation-for="Name"></span>
        <p></p>
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name">
        <p></p>
        <span asp-validation-for="Price"></span>
        <p></p>
        <label asp-for="Price"></label>
        <input type="text" asp-for="Price">
        <p></p>
        <span asp-validation-for="Description"></span>
        <p></p>
        <label asp-for="Description" style = 'vertical-align: top'></label>
        <textarea style = 'width: 200px; height: 100px' asp-for="Description"></textarea>
        <p></p>
        <input type="submit" value="Create" class = 'btn btn-primary'>
    </form>
</div>
<div style = 'display: inline-block; width: 40%; padding: 20px; vertical-align: top'>
    <h1>Existing Products</h1>
    @{
        foreach(Product product in ViewBag.products) {
            <a style = 'display: block' href = '/products/@product.ProductId'>@product.Name</a>
        }
    }
</div>